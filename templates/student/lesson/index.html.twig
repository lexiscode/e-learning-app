{% extends 'base.html.twig' %}

{% block title %}All Lessons{% endblock %}

{% set include_navigation_bar = true %}

{% block body %}

    <p>{{ course.id }}</p>
    <p>{{ course.title }}</p>
    <p>{{ course.description }}</p>
    <p>{{ course.price }}</p>
    <br>
    <a href="{{ path('unenroll_course', {'id': course.id}) }}" class="btn btn-success">Unenroll</a>
    <br>

    <div class="table-container w-50 m-auto">

        <table class="table table-striped">
            <thead style="text-align: center">
                <tr>
                    <th scope="col">#ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Content</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>

            <tbody style="text-align: center">

                {% if lessons|length > 0 %}
                    {% for lesson in lessons %}
                        <tr>
                            <td>{{ lesson.id }}</td>
                            <td>{{ lesson.title }}</td>
                            <td>{{ lesson.content }}</td>
                            <td>
                                <a href="{{ path('course_lesson', {'id': lesson.id}) }}" class="btn btn-success">View</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <p>No lesson found.</p>
                {% endif %}

            </tbody>

        </table>

    </div>

{% endblock %}
