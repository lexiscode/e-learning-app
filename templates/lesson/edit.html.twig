{% extends 'base.html.twig' %}

{% block title %}Update Lesson{% endblock %}

{% set include_navigation_bar = true %}

{% block body %}

<!-- Header Start -->
<div class="container-fluid bg-primary py-5 mb-5 page-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">Edit Lesson</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Edit Lesson</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center">Update A Lesson</h1>
                {{ form_errors(lessonForm) }}
                {{ form_start(lessonForm) }}

                <div class="form-group">
                    {{ form_row(lessonForm.title)}}
                </div>
                <br>

                <div class="form-group">
                    {{ form_row(lessonForm.content, {
                        'label': 'Course Content',
                        'attr': {
                                'class': 'form-control', 
                                'placeholder': 'Enter course content here...'
                                }
                        }) 
                    }}
                </div>
               
                <button type="submit" class="btn btn-primary btn-block mt-3">Update Course</button>
                {{ form_end(lessonForm) }}
            </div>
        </div>
    </div>
    <br>

{% endblock %}
