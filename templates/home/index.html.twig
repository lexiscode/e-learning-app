{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/home.css") }}">
{% endblock %}

{% set include_navigation_bar = false %}

{% block title %}LearnLex{% endblock %}

{% block body %}

<div class="welcome-container">

    <h1>Welcome to LearnLex</h1>
    <p>Your all-in-one solution for code learning effectively.</p>
    <div class="buttons">

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_profile') }}" class="button">My Profile</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="button">Login</a>
            <a href="{{ path('app_register') }}" class="button">Register</a>
        {% endif %}

    </div>

</div>

{% endblock %}

