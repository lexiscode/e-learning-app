
{% extends 'base.html.twig' %}

{% block title %}Update Course{% endblock %}

{% set include_navigation_bar = true %}

{% block body %}

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center">Update A Course</h1>
                {{ form_errors(courseForm) }}
                {{ form_start(courseForm) }}

                <div class="form-group">
                    {{ form_row(courseForm.title)}}
                </div>

                <div class="form-group">
                    {{ form_row(courseForm.description, {
                        'label': 'Course Description',
                        'attr': {
                                'class': 'form-control', 
                                'placeholder': 'Enter course description here...'
                                }
                        }) 
                    }}
                </div>

                <div class="form-group">
                    {{ form_row(courseForm.price)}}
                </div>
                
                <div class="form-check">
                    {{ form_row(courseForm.agreeTerms, {
                        'label': 'I agree to the terms and conditions',
                        'attr': {'class': 'form-check-input'}
                    }) }}
                    
                </div>
               
                <button type="submit" class="btn btn-primary btn-block mt-3">Update Course</button>
                {{ form_end(courseForm) }}
            </div>
        </div>
    </div>
    <br>

{% endblock %}
